@import 'vars.styl'
@import 'basic.styl'
@import 'lib.styl'

html,body
  width: 100%
  height: 100%
  margin: 0
  padding: 0

table.course-list
  width: 100%
  margin: 20px 0
  td
    border-bottom: 6px solid #fff
  td:first-child
    width: 60px
    border-right: 5px solid #ccc
    text-align: right
    padding-right: 10px
  td:nth-child(2)
    width: 80px
    padding-left: 10px
  td:nth-child(3)
    width: 40px
    a
      color: #ccc
      cursor: default
      opacity: 0.1
  tr.red td:first-child
    border-right-color: #f00
    font-weight: bold
  tr.passed td
    color: #999
    opacity: 0.8
  tr.passed
    td:first-child
      border-right-color: #eee
  tr.passed, tr.current
    td:nth-child(3)
      a
        color: #009cff
        cursor: pointer
        opacity: 1

  tr.current
    background: #efe
    td:first-child
      border-right-color: #0f0
    td:last-child:after
      content: '本週'
      display: inline-block
      float: right
      font-size: 0.7em
      color: #999
      margin-right: 5px
      line-height: 2.2em

.jumbotron-fluid
  background: url(/assets/img/landing.jpg) #222
  background-size: cover
  color: #eee
  h1
    text-shadow: 0 3px 6px rgba(0,0,0,0.5)
  a
    color: #44bbff
  .subtitle
    font-size: 0.8em
    font-weight: hairline
    font-family: century gothic
    border-top: 1px solid rgba(255,255,255,0.1)
    width: 400px
    margin: auto
    padding-top: 5px

a.btn
  color: #fff

a.anchor
  margin-top: -60px
  position: absolute

#footer
  background: #222
  padding: 20px 20px
  color: #fff
  a
    color: #fff

nav.bg-black
  background-color: #000!important
  #navbarSupportedContent
    justify-content: flex-end


table.spec
  width: 100%
  tr td:first-child
    width: 80px
  tr td:nth-child(2)
    width: 60px
  tr td:nth-child(3)
    text-align: left
  tr td
    text-align: center
    background: #f9f9f9
    border-bottom: 4px solid #fff
    border-right: 4px solid #fff
    padding: 5px 10px
  tr:nth-child(2n) td
    background: #eee

.team-list
  display: flex
  flex-wrap(wrap)
  .team
    flex(1 1 300px)
    width: 300px
    margin: 5px
    text-align: center
  .team.max
    flex(1 1 640px)
  .info
    margin-top: 5px
  h4, .desc, .team
    text-decoration: none
    color: #222

  .img
    height: 170px
    background-color: #eee
    background-size: cover
    background-repeat: no-repeat
    background-position: center center
